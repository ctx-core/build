{
	"name": "@ctx-core/build",
	"version": "1.0.5",
	"private": false,
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./src/index.ts",
	"type": "module",
	"bin": {
		"build-watch": "./bin/build-watch.mjs"
	},
	"scripts": {
