{
	"name": "@ctx-core/build",
	"version": "1.1.142",
	"private": false,
	"type": "module",
	"bin": {
		"build-watch": "./bin/build-watch.mjs"
	},
	"files": [
		"*.d.ts",
		"*.js",
		"*.json",
		"./bin",
		"./build_watch_cli"
	],
	"types": "./index.d.ts",
	"exports": {
		".": "./index.js",
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": ":",
		"clean": ":",
		"exec": "$@",
		"prepublishOnly": "pnpm clean && pnpm build && pnpm test",
		"test": "pnpm test:unit && pnpm test:types",
		"test:types": "check-dts",
		"test:unit": "tsx node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
		"test:unit:coverage": "c8 pnpm test:unit"
	},
	"dependencies": {
		"@ctx-core/child_process": "^7.4.78",
		"@ctx-core/env": "^17.5.11",
		"@ctx-core/monorepo": "^21.1.7",
		"ctx-core": "^5.12.0",
		"cheap-watch": "^1.0.4",
		"fdir": "^6.1.1",
		"js-yaml": "^4.1.0",
		"minimatch": "^9.0.3",
		"ora": "8.0.1",
		"rusha": "^0.8.14"
	},
	"devDependencies": {
		"@types/node": "^20.10.6",
		"@types/rusha": "^0.8.3",
		"c8": "^8.0.1",
		"check-dts": "^0.7.2",
		"eslint": "^8.56.0",
		"tsx": "^4.7.0",
		"typescript": "next",
		"uvu": "^0.5.6"
	},
	"noUpdate": [],
	"homepage": "https://github.com/ctx-core/build#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/build.git"
	},
	"bugs": {
		"url": "https://github.com/ctx-core/build/issues"
	},
	"sideEffects": false
}