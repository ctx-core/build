{
	"name": "@ctx-core/build",
	"version": "1.0.25",
	"private": false,
	"type": "module",
	"bin": {
		"build-watch": "./bin/build-watch.mjs"
	},
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "npm run compile",
		"clean": "rimraf dist && npm run clean_tsbuildinfo",
		"clean_tsbuildinfo": "rm -f tsconfig.tsbuildinfo && rm -f dist/**/*.d.ts",
		"compile": "npm run compile_source && npm run compile_declaration",
		"compile_source": "swc src --out-dir dist --copy-files --source-maps --config-file .swcrc",
		"compile_declaration": "npm run clean_tsbuildinfo && tsc --declaration --emitDeclarationOnly --declarationDir dist",
		"prepublishOnly": "npm run compile",
		"exec": "$@"
	},
	"dependencies": {
		"@ctx-core/cli-args": "workspace:^11.0.19",
		"@ctx-core/monorepo": "workspace:^18.1.21",
		"@ctx-core/queue": "workspace:^6.1.16",
		"cheap-watch": "^1.0.4",
		"fdir": "^5.1.0",
		"js-yaml": "^4.1.0",
		"ora": "6.0.1",
		"picomatch": "^2.3.0",
		"rusha": "^0.8.14"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.55",
		"@swc/core": "^1.2.121",
		"@types/node": "^17.0.2",
		"@types/picomatch": "^2.3.0",
		"@types/rusha": "^0.8.0",
		"rimraf": "^3.0.2",
		"typescript": "next"
	},
	"noUpdate": [
		"postcss",
		"swiper"
	],
	"homepage": "https://github.com/ctx-core/build#readme",
	"svelte": "./dist/index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/build.git"
	},
	"bugs": {
		"url": "https://github.com/ctx-core/build/issues"
	}
}