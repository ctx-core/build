	"dependencies": {
		"@ctx-core/cli-args": "workspace:^11.0.2",
		"@ctx-core/monorepo": "workspace:^18.1.2",
		"@ctx-core/queue": "workspace:^6.1.1",
		"cheap-watch": "^1.0.4",
		"fdir": "^5.1.0",
		"js-yaml": "^4.1.0",
		"ora": "6.0.1",
		"picomatch": "^2.3.0",
		"rusha": "^0.8.14"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.51",
		"@swc/core": "^1.2.110",
		"@types/node": "^16.11.8",
		"@types/picomatch": "^2.3.0",
		"@types/rusha": "^0.8.0",
		"typescript": "^4.5.2"
	},
	"noUpdate": [
		"postcss",
		"swiper"
	],
	"homepage": "https://github.com/ctx-core/build#readme"
